//---- OnAiTalkイベント -----------------------------------------------------------------
OnAiTalk
{
	if mikireflag == 0
	{
		//---- 通常のランダムトーク、ただしチェイン中はチェイントーク
		if CHAIN.IDName == "" {
			RandomTalk
		}
		else {
			ChainTalk
		}
	}
	else
	{
		//---- 見切れ中なので見切れ中のトークを行う
		MikireTalk
	}
}

