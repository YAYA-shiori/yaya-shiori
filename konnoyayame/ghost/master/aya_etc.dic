//---- ヘッドライン読み上げ -------------------------------------------------------------
OnHeadlinesense.OnFind
{
	//---- はじめのセリフ
	if reference2 == "First" || reference2 == "First and Last"
	{
		//---- 最初のページ
		"\0\b2\s[0]%reference0のヘッドラインですよっ。"
	}
	elseif reference2 == "Next"
	{
		//---- 真ん中あたりのページ
		"\0\b2\s[0]%reference0ヘッドライン、続き。"
	}
	elseif reference2 == "Last"
	{
		//---- 最後のページ
		"\0\b2\s[0]%reference0ヘッドライン、これが最後のページです。"
	}
	--
	//---- ヘッドライン本体
	"\n\n%reference3\n\n"
	--
	//---- 選択肢
	if reference2 == "First" || reference2 == "Next"
	{
		//---- 次のページがある場合
		"\q0[][次のページ]/
		\q1[%reference1][サイトへ]/
		\q2[HEADLINECANCEL][やめ]\e"
	}
	else
	{
		//---- 次のページがない場合
		"\q0[%reference1][サイトへ]/
		\q1[HEADLINECANCEL][やめ]\e"
	}
}

