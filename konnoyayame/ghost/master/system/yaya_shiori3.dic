// 文字/文字列定数
#define	C_CRLF2		CHR(0xd,0xa,0xd,0xa)			/* 改行コードx2   */
#define	C_CRLF		CHR(0xd,0xa)					/* 改行コード     */
#define	C_BYTE1		CHR(0x1)						/* バイト値1      */

// チェイン
#globaldefine	CHAIN{{		{{CHAIN	/* どうも誤記される場合があるようなので */
#globaldefine	CHAIN}}		}}CHAIN	/* 同上 */
